# Copy this file to .env and fill in values as needed

# OpenAI LLM refinement (optional)
# Used by transcribe.py when --use-llm is passed
OPENAI_API_KEY=

# Hugging Face token for diarization (optional)
# Required if you plan to enable pyannote-based diarization in future
HUGGINGFACE_TOKEN=

# Microservices (optional overrides)
# Defaults: http://localhost:5001/5002/5003 and orchestrator http://localhost:5000
TRANSCRIPTION_SERVICE_URL=http://localhost:5001
MEETING_MINUTES_SERVICE_URL=http://localhost:5002
FILE_MANAGEMENT_SERVICE_URL=http://localhost:5003
ORCHESTRATOR_SERVICE_URL=http://localhost:5000
